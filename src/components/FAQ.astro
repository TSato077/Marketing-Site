---
const faqs = [
	{ question: 'How long is each session?', answer: '25 minutes.' },
	{
		question: 'What’s included?',
		answer: 'All unretouched images + 10 fully retouched final portraits.',
	},
	{
		question: 'When will we receive our photos?',
		answer: 'Within 7 days.',
	},
	{
		question: 'Where are sessions held?',
		answer: 'Sahuaro Ranch Park, Glendale, AZ.',
	},
	{
		question: 'What should we wear?',
		answer: 'Coordinated neutrals — see the wardrobe guide above.',
	},
	{
		question: 'Do you offer private sessions?',
		answer: 'Yes.',
		link: {
			href: 'mailto:tsato077@gmail.com',
			label: 'Email to inquire.',
		},
	},
];
---

<section id="faq" class="bg-white">
	<div class="mx-auto max-w-4xl px-6 lg:px-10">
		<h2 class="section-heading">FAQs</h2>
		<p class="section-subheading">Everything you need to know before booking your session.</p>
		<div class="mt-12 space-y-6">
			{faqs.map((faq) => (
				<details class="group rounded-2xl border border-brand-indigo/10 bg-brand-gray/30 p-6 transition duration-200 ease-soft open:bg-brand-gray/70">
					<summary class="flex cursor-pointer items-center justify-between gap-4 text-lg font-semibold text-brand-charcoal focus:outline-none">
						<span>{faq.question}</span>
						<span
							aria-hidden="true"
							class="text-2xl text-brand-indigo transition duration-200 ease-soft group-open:rotate-45"
						>
							+
						</span>
					</summary>
					<p class="mt-4 text-base text-brand-charcoal/80">
						{faq.answer}
						{faq.link && (
							<>
								{' '}
								<a href={faq.link.href} class="font-semibold text-brand-indigo hover:text-brand-charcoal">
									{faq.link.label}
								</a>
							</>
						)}
					</p>
				</details>
			))}
		</div>
	</div>
</section>



